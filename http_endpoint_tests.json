{
    "config": {
        "base_url": "http://localhost",
        "port": 8080,
        "pause": 0,
        "timeout": 5000,
        "keep_session": false
    },
    "tests": [
        {
            "description": "creating a new project",
            "request_endpoint": "new",
            "request_method": "POST",
            "request_body": "{ \"name\": \"new-project\", \"vars\": [ { \"name\": \"port\", \"value\": \"8080\" } ] }",
            "request_headers": [{"header": "content-type", "value": "applicaton/json"}],
            "response_code": 200,
            "response_body": ""
        },
        {
            "description": "creating a project that already exists",
            "request_endpoint": "new",
            "request_method": "POST",
            "request_body": "{ \"name\": \"new-project\", \"vars\": [ { \"name\": \"port\", \"value\": \"8080\" } ] }",
            "request_headers": [{"header": "content-type", "value": "applicaton/json"}],
            "response_code": 400,
            "response_body": "project already exists"
        },
        {
            "description": "creating a project with no body",
            "request_endpoint": "new",
            "request_method": "POST",
            "request_headers": [{"header": "content-type", "value": "applicaton/json"}],
            "response_code": 400
        },
        {
            "description": "reading project that doesn't exist",
            "request_endpoint": "read",
            "request_method": "GET",
            "request_body": "non-existant-project",
            "request_headers": [{"header": "content-type", "value": "text/plain"}],
            "response_code": 400,
            "response_body": "project does not exist"
        },
        {
            "description": "reading existing project",
            "request_endpoint": "read",
            "request_method": "GET",
            "request_headers": [{"header": "content-type", "value": "text/plain"}],
            "request_body": "new-project",
            "response_code": 200
        },
        {
            "description": "updating project that doesn't exist",
            "request_endpoint": "update",
            "request_method": "POST",
            "request_body": "{\"name\": \"non-existant-project\", \"vars\": []}",
            "request_headers": [{"header": "content-type", "value": "application/json"}],
            "response_code": 400,
            "response_body": "project does not exist"
        },
        {
            "description": "updating project that does exist",
            "request_endpoint": "update",
            "request_method": "POST",
            "request_body": "{\"name\": \"new-project\", \"vars\": [{\"name\": \"new-port\", \"value\": \"8181\"}]}",
            "request_headers": [{"header": "content-type", "value": "application/json"}],
            "response_code": 200
        },
        {
            "description": "deleting project that doesn't exist",
            "request_endpoint": "delete",
            "request_method": "DELETE",
            "request_body": "non-existant-project",
            "request_headers": [{"header": "content-type", "value": "text/plain"}],
            "response_code": 400,
            "response_body": "project does not exist"
        },
        {
            "description": "deleting project that does exist",
            "request_endpoint": "delete",
            "request_method": "DELETE",
            "request_body": "new-project",
            "request_headers": [{"header": "content-type", "value": "text/plain"}],
            "response_code": 200
        }
    ]
}
