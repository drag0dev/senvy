{
    "config": {
        "base_url": "http://localhost",
        "port": 8080,
        "pause": 0,
        "timeout": 5000,
        "keep_session": false
    },
    "tests": [
        {
            "description": "updating project that doesn't exist",
            "request_endpoint": "update",
            "request_method": "POST",
            "request_body": "{\"name\": \"update-test-project\", \"vars\": []}",
            "request_headers": [{"header": "content-type", "value": "application/json"}],
            "response_code": 400,
            "response_body": "project does not exist"
        },
        {
            "description": "creating a new project to update",
            "request_endpoint": "new",
            "request_method": "POST",
            "request_body": "{ \"name\": \"update-test-project\", \"vars\": [ { \"name\": \"port\", \"value\": \"8080\" } ] }",
            "request_headers": [{"header": "content-type", "value": "applicaton/json"}],
            "response_code": 200
        },
        {
            "description": "updating project that does exist",
            "request_endpoint": "update",
            "request_method": "POST",
            "request_body": "{\"name\": \"update-test-project\", \"vars\": [{\"name\": \"new-port\", \"value\": \"8181\"}]}",
            "request_headers": [{"header": "content-type", "value": "application/json"}],
            "response_code": 200
        }
    ]
}
